def menu():
    print("0-quitter")
    print("1-écrire dans le répertoire")
    print("2-rechercher dans le répertoire")
    return int(input("Votre choix ? "))
    
def ecriture():
    nom = input("Nom (0 pour terminer) : ")
    with open('nom', 'a') as f:
        f.write(nom)
    tel = input("Téléphone : ")
    with open("repertoire", "") as f:
        f.write(tel)

def lecture():
    with open("repertoire", "r") as f:
        f.read()

menu()
if menu() == 0:
    ecriture()
