

saut = 0

def menu():
    choix = 0
    while choix == 0:
        print("0-quitter")
        print("1-écrire dans le répertoire")
        print("2-rechercher dans le répertoire\n")
        choix = int(input("Votre choix ? \n"))
        if choix == 1:
            ecriture()
        elif choix == 2:
            lecture()



    
def ecriture():
    nom = input("Nom (0 pour terminer) : ")
    if nom != "0":
        with open('repertoire.txt', 'a') as f:
            f.write(nom + "\n")
        tel = input("Téléphone : ")
        with open('repertoire.txt', 'a') as f:
            f.write(tel + "\n")
        ecriture()
    else:
        menu()

def lecture():
    with open('repertoire.txt', 'r') as f:
        saut = 0
        recherche = input("Entrer un nom : ")
        for ligne in f:
            if ligne.startswith(recherche):
                test = f.readlines(saut)
                print(f"Le numéro recherché est : {test[0]}")
                menu()
            else:
                print("Inconnu")
                menu()
        saut += 1




# la fonction menu permet d'afficher le menu ainsi que de demander le choix 
#****************début de la fonction menu******************
def menu():
    print("0-quitter")
    print("1-écrire dans le répertoire")
    print("2-rechercher dans le répertoire")
    return int(input("Votre choix ? "))
#****************fin de la fonction menu********************

#La fonction ecriture permet d'ecrire un nom dans le ficher texte nommé repertoire 
#****************début de la fonction ecriture******************
def ecriture():
    nom = input("Nom (0 pour terminer) : ")
    with open('nom', 'a') as f:
        f.write(nom)
    tel = input("Téléphone : ")
    with open("repertoire", "") as f:
        f.write(tel)
#****************fin de la fonction ecriture********************

#La fontion lecture permet d'afficher le numéro de telephone correpondant au nom 
#****************début de la fonction lecture******************
def lecture():
    with open("repertoire", "r") as f:
        f.read()
#****************fin de la fonction lecture********************

# Initialisation de la variable saut
saut = 0

# Fonction pour afficher le menu et gérer les choix de l'utilisateur
def menu():
    choix = 0
    while choix == 0:
        # Affichage des options du menu
        print("0-quitter")
        print("1-écrire dans le répertoire")
        print("2-rechercher dans le répertoire\n")
        # Lecture du choix de l'utilisateur
        choix = int(input("Votre choix ? \n"))
        # Appel des fonctions en fonction du choix
        if choix == 1:
            ecriture()
        elif choix == 2:
            lecture()

# Fonction pour écrire un nom et un numéro de téléphone dans le fichier
def ecriture():
    # Lecture du nom
    nom = input("Nom (0 pour terminer) : ")
    if nom != "0":
        # Écriture du nom dans le fichier
        with open('repertoire.txt', 'a') as f:
            f.write(nom + "\n")
        # Lecture du numéro de téléphone
        tel = input("Téléphone : ")
        # Écriture du numéro de téléphone dans le fichier
        with open('repertoire.txt', 'a') as f:
            f.write(tel + "\n")
        # Appel récursif de la fonction pour ajouter d'autres entrées
        ecriture()
    else:
        # Retour au menu principal
        menu()

# Fonction pour rechercher un nom dans le fichier et afficher le numéro associé
def lecture():
    with open('repertoire.txt', 'r') as f:
        # Lecture du nom à rechercher
        recherche = input("Entrer un nom : ")
        for ligne in f:
            # Vérification si la ligne commence par le nom recherché
            if ligne.strip() == recherche:
                # Lecture et affichage du numéro de téléphone
                tel = next(f).strip()
                print(f"Le numéro recherché est : {tel}")
                menu()
                return
        # Si le nom n'est pas trouvé
        print("Inconnu")
        menu()


